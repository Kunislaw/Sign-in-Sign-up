<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="428.0" prefWidth="214.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.utp.wtie.controllers.SignInController">
   <children>
      <Button fx:id="loginButton" layoutX="30.0" layoutY="259.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="149.0" text="Login" />
      <TextField fx:id="loginTextField" layoutX="30.0" layoutY="116.0" />
      <PasswordField fx:id="passPasswordField" layoutX="30.0" layoutY="170.0" />
      <Label layoutX="32.0" layoutY="153.0" text="Password:" />
      <Label layoutX="30.0" layoutY="99.0" text="Login:" />
      <Label fx:id="signInLabel" layoutX="30.0" layoutY="14.0" text="Sign-in">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </Label>
      <Label fx:id="signUpLabel" layoutX="77.0" layoutY="14.0" onMouseClicked="#toggleToSignUp" text="Sign-up">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Label>
      <CheckBox fx:id="showPassCheckBox" layoutX="34.0" layoutY="208.0" mnemonicParsing="false" onAction="#toggleVisiblePassword" text="Show password" />
      <TextField fx:id="passTextField" layoutX="30.0" layoutY="170.0" visible="false" />
   </children>
</Pane>
